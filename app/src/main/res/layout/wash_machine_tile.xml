<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/washing_machine_tile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_local_laundry_service_24"
            android:layout_marginLeft="16dp"
            app:tint="@color/design_default_color_primary" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant" />

                <TextView
                    android:id="@+id/wash_machine_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/model"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/manufacturer"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/manufacturer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/capacity"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/capacity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/power_usage"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/power_usage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/spinning_speed"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/spinning_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_working"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/is_working"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_working"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_washing"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/design_default_color_primary_variant"/>

                <TextView
                    android:id="@+id/is_washing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/is_washing"
                    android:paddingStart="8dp"
                    android:textColor="@color/design_default_color_primary"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>